{
  "base_url": "http://localhost:3001",
  "requisicoes": {
    "1. Informações da API": {
      "metodo": "GET",
      "url": "http://localhost:3001/",
      "descricao": "Ver informações básicas da API"
    },
    "2. Listar todos os pratos": {
      "metodo": "GET",
      "url": "http://localhost:3001/api/pratos",
      "descricao": "Buscar todos os pratos disponíveis"
    },
    "3. Buscar prato por ID": {
      "metodo": "GET",
      "url": "http://localhost:3001/api/pratos/1",
      "descricao": "Buscar o prato com ID 1 (Baião de Dois)"
    },
    "4. Criar novo prato": {
      "metodo": "POST",
      "url": "http://localhost:3001/api/pratos",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "nome": "Feijão Tropeiro",
        "descricao": "Feijão com farinha, linguiça e ovos",
        "preco": 18.50,
        "categoria": "principal",
        "disponivel": true
      },
      "descricao": "Adicionar um novo prato ao cardápio"
    },
    "5. Listar todos os clientes": {
      "metodo": "GET",
      "url": "http://localhost:3001/api/clientes",
      "descricao": "Ver todos os clientes cadastrados"
    },
    "6. Criar novo cliente": {
      "metodo": "POST",
      "url": "http://localhost:3001/api/clientes",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "nome": "José Pereira",
        "cpf": "11122233344",
        "email": "jose.pereira@email.com",
        "telefone": "(81) 99999-6666"
      },
      "descricao": "Cadastrar um novo cliente"
    },
    "7. Listar todos os pedidos": {
      "metodo": "GET",
      "url": "http://localhost:3001/api/pedidos",
      "descricao": "Ver todos os pedidos realizados"
    },
    "8. Criar novo pedido": {
      "metodo": "POST",
      "url": "http://localhost:3001/api/pedidos",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "clienteId": 1,
        "status": "pendente",
        "total": 45.40,
        "observacoes": "Sem cebola e com mais pimenta"
      },
      "descricao": "Fazer um novo pedido"
    }
  },
  "instrucoes_bruno": {
    "1": "Abra o Bruno",
    "2": "Crie uma nova coleção",
    "3": "Configure a URL base como: http://localhost:3001",
    "4": "Crie requisições usando os exemplos acima",
    "5": "Para POST, adicione o header: Content-Type: application/json",
    "6": "Para POST, adicione o body em formato JSON"
  }
} 